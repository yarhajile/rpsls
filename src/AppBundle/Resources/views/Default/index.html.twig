{% extends 'AppBundle:_base:template.html.twig' %}

{% block content_body %}
<div class="panel panel-default">

  <div class="panel-heading">
    <h3><span style="color: #0088CC">R</span>ock<span style="color: #0088CC">P</span>aper<span style="color: #0088CC">S</span>cissors<span style="color: #0088CC">L</span>izard<span style="color: #0088CC">S</span>pock - V1.0
  </h3></div>
  <div class="panel-body">
    <div class="col-md-8">
      <h3>Pick your poison... you know the rules!</h3>
      <select id="choice" class="form-control">
        <option>Choose</option>
        <option value="rock">Rock</option>
        <option value="paper">Paper</option>
        <option value="scissors">Scissors</option>
        <option value="lizard">Lizard</option>
        <option value="spock">Spock</option>
      </select>
    </div>

    <div class="col-md-4">
      <div id="results"></div>
      <div id="stats"></div>
    </div>
  </div>
</div>

  <script type="text/javascript">
  $('#choice').on('change', function() {
    $('#results').load('/play', {'choice' : $(this).val()});
    $('#stats').load('/stats');
  });

  $(function() {
    $('#stats').load('/stats');
  })
</script>
{% endblock content_body %}
